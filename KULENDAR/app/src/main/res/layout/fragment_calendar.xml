<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calendar.CalendarFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp">

            <CalendarView
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:id="@+id/calendarView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"/>
            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:background="@drawable/border">

                <TextView
                    android:id="@+id/timetable1"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="#FFEB3B" />
                <TextView
                    android:id="@+id/timetable2"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="#FFEB3B" />
                <TextView
                    android:id="@+id/timetable3"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="@color/white" />
                <TextView
                    android:id="@+id/timetable4"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/timetable5"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="#C57892" />
                <TextView
                    android:id="@+id/timetable6"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="#C57892" />

                <TextView
                    android:id="@+id/timetable7"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="#9CD3DA" />
                <TextView
                    android:id="@+id/timetable8"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="@color/white" />
                <TextView
                    android:id="@+id/timetable9"
                    android:layout_width="35dp"
                    android:layout_height="45dp"
                    android:background="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:text="일정"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="30dp"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <Button
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:text="추가"
                    android:textSize="14sp"
                    android:backgroundTint="#8CC549"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="190dp"/>
            </LinearLayout>
<!--
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cal_recyclerView"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
-->
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

</FrameLayout>